---
import PageLayout from "@/layouts/Base.astro";
import { Image } from "astro:assets";
import heroImg from "@/assets/hero_unit.png";
import { siteConfig } from "@/site-config";
import Button from "@/components/ui/Button.astro";
---

<style>
	html[data-theme="dark"] #cta span {
		mix-blend-mode: color-dodge;
	}

	html[data-theme="dark"] #cta:hover span {
		mix-blend-mode: color-dodge;
	}

	html[data-theme="dark"] #cta a {
		color: #29bc89;
	}
</style>

<script>
	document.addEventListener("DOMContentLoaded", function () {
		const kenobi = document.getElementById("kenobi");
		const img = document.querySelector("img");
		const title = document.getElementById("abduction");

		if (kenobi) {
			kenobi.addEventListener("mouseover", () => {
				if (img) img.src = "hello-there.avif";
				if (title) title.textContent = "Hello there! üõ∏";
			});

			kenobi.addEventListener("mouseout", () => {
				if (img) img.src = "hero_unit.png";
				if (title) title.textContent = "Hello there! üêÑ";
			});
		}
	});
</script>

<PageLayout meta={{ title: "developer jokes" }}>
	<div
		class="mb-6 rounded-md border border-green-500 bg-green-500/10 px-4 py-2 text-center text-sm backdrop-blur-sm"
	>
		<a href="/token" class="text-green-500 transition-colors hover:text-green-400">
			üöÄ $COWSAY Token is Live ‚Üí
		</a>
	</div>

	<section class="mt-8">
		<h1 class="title mb-6 inline-block cursor-pointer" id="kenobi">
			<span id="abduction">Hello there! üêÑ </span>
		</h1>

		<div class="flex justify-center">
			<Image alt="Cowsay" fetchpriority="high" loading="eager" src={heroImg} />
		</div>
		<br />
		<p class="mb-4">
			This is the homepage for <a class="cactus-link" href="https://twitter.com/cowsayco"
				>@cowsayco</a
			> Twitter account. This fun project combines the classic command-line program <a
				class="cactus-link"
				href="https://github.com/tnalpgge/rank-amateur-cowsay">cowsay from Tony Monroe</a
			>
			in 1999 with the power of social media for a daily dose of oxytocin. Our bot tweets a curated quote
			each day, presented in the unique style of a cowsay, ASCII art message and coloured to lolcat standards.
		</p>
	</section>

	<section id="cta" class="my-6 h-7 w-full leading-7">
		<Button
			href="https://twitter.com/intent/user?screen_name=cowsayco"
			data-size="large"
		>
			Follow @cowsayco
		</Button>
	</section>

	<section class="mb-6 mt-16">
		<h2 class="title mb-4 text-2xl">Join the Community</h2>
		<p class="mb-4">
			The community is growing, and we're preparing for community-led
			launch support. Come be part of the journey!
		</p>
		<div class="flex flex-wrap gap-4">
			<Button
				href="https://twitter.com/intent/user?screen_name=cowsayco"
				target="_blank"
				rel="noopener noreferrer"
			>
				Follow @cowsayco
			</Button>
			<Button
				href="https://x.com/i/communities/2011240178778607815"
				target="_blank"
				rel="noopener noreferrer"
			>
				Join Twitter Community
			</Button>
			<Button
				href="https://discord.gg/yhJ24mCSxd"
				target="_blank"
				rel="noopener noreferrer"
			>
				Join Discord
			</Button>
			<Button
				href="#"
				target="_blank"
				rel="noopener noreferrer"
			>
				LinkedIn (Coming Soon)
			</Button>
			<Button
				href="#"
				target="_blank"
				rel="noopener noreferrer"
			>
				Telegram (Coming Soon)
			</Button>
		</div>
	</section>
</PageLayout>
