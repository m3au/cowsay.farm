---
import PageLayout from "@/layouts/Base.astro";
import AuctionCard from "@/components/nft/AuctionCard.astro";
import SalesHistory from "@/components/nft/SalesHistory.astro";

const meta = {
	description: "Collect unique NFT artwork featuring your favorite Cowsay developer quotes. Each piece is auctioned, with all proceeds going to token buybacks.",
	title: "NFT Gallery",
};
---

<PageLayout meta={meta}>
	<section>
		<h1 class="title mb-6">NFT Gallery</h1>
		<p class="mb-4">
			Own a piece of Cowsay history! Each popular quote from @cowsayco is minted as unique NFT artwork. These
			one-of-one or limited edition pieces celebrate the best developer quotes.
		</p>
		<p class="mb-4">
			<strong>100% of auction proceeds</strong> (after marketplace fees) are automatically reinvested into $COWSAYS
			token buybacks, creating value for the entire ecosystem.
		</p>
	</section>

	<section>
		<h2 class="title mb-6 mt-16 text-2xl">Active Auctions</h2>
		
		<div id="active-auctions">
			<p class="mb-4 text-muted">No active auctions at the moment. Check back soon!</p>
		</div>

		<!-- Auction cards will be rendered here -->
		<!-- <AuctionCard /> -->
	</section>

	<section>
		<h2 class="title mb-6 mt-16 text-2xl">Sales History</h2>
		
		<SalesHistory />
	</section>

	<section>
		<h2 class="title mb-6 mt-16 text-2xl">Marketplace Links</h2>
		
		<ul class="space-y-2">
			<li>
				<a class="cactus-link" href="https://magiceden.io" target="_blank" rel="noopener noreferrer">
					Magic Eden
				</a>
			</li>
			<li>
				<a class="cactus-link" href="https://tensor.trade" target="_blank" rel="noopener noreferrer">
					Tensor
				</a>
			</li>
		</ul>
	</section>

	<section>
		<h2 class="title mb-6 mt-16 text-2xl">How It Works</h2>
		
		<ol class="list-decimal list-inside space-y-2 mb-4">
			<li>Popular Cowsay quotes are minted as unique NFT artwork on Solana</li>
			<li>NFTs are auctioned on Magic Eden, Tensor, or custom auction platforms</li>
			<li>After marketplace fees, all proceeds are used to buy $COWSAYS tokens</li>
			<li>Buyback transactions are publicly recorded and verifiable on-chain</li>
			<li>Track all sales and buybacks on our <a class="cactus-link" href="/transparency">transparency dashboard</a></li>
		</ol>
	</section>
</PageLayout>



