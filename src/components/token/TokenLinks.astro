					<Button
						href="https://solscan.io/token/7wVPhDegCLfcHcNdW1Z9Wbwd2HXMj3snLoiTeDNEpump?activity_type=ACTIVITY_SPL_TRANSFER&exclude_amount_zero=true&remove_spam=false&from_address=666V4HbB73nmNNXwQ1cx25RHYWw1G8RWtAzDaZh2Pdtw&page_size=100"
						target="_blank"
						rel="noopener noreferrer"
					>
						View all buyback transactions on Solscan →
					</Button>
					<Button
						href="https://solscan.io/token/7wVPhDegCLfcHcNdW1Z9Wbwd2HXMj3snLoiTeDNEpump?activity_type=ACTIVITY_SPL_BURN&exclude_amount_zero=false&page_size=100&remove_spam=false"
						target="_blank"
						rel="noopener noreferrer"
