				<div class="flex flex-wrap gap-4">
					<Button
						href={`https://dexscreener.com/solana/${contractAddress}`}
						target="_blank"
						rel="noopener noreferrer"
					>
						DexScreener
					</Button>
					<Button
						href={`https://birdeye.so/token/${contractAddress}?chain=solana`}
						target="_blank"
						rel="noopener noreferrer"
					>
						Birdeye
					</Button>
					<Button
						href={`https://gmgn.ai/sol/token/${contractAddress}`}
						target="_blank"
						rel="noopener noreferrer"
					>
						GMGN.ai
					</Button>
					<Button
						href="https://www.dextools.io/app/solana/pair-explorer/AkoJgEzT4Sk2fV5ABMRQ4tc2v9TmL9Wxf2nKLjMrff5Z"
						target="_blank"
						rel="noopener noreferrer"
					>
						DEXTools
					</Button>
					<Button
						href={`https://www.geckoterminal.com/solana/pools/${contractAddress}`}
						target="_blank"
						rel="noopener noreferrer"
					>
						GeckoTerminal
					</Button>
				</div>
			</div>

			<!-- Buy & Trade -->
			<div>
				<p class="mb-2 text-xs font-semibold text-green-500/80">Buy & Trade</p>
				<div class="flex flex-wrap gap-4">
