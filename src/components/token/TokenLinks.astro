						href={`https://jup.ag/swap/SOL-${contractAddress}`}
						target="_blank"
						rel="noopener noreferrer"
					>
						Jupiter
					</Button>
					<Button
						href={`https://raydium.io/swap/?inputMint=sol&outputMint=${contractAddress}`}
						target="_blank"
						rel="noopener noreferrer"
					>
						Raydium
					</Button>
					<Button
						href={`https://pump.fun/${contractAddress}`}
						target="_blank"
						rel="noopener noreferrer"
					>
						Pump.fun
					</Button>
				</div>
			</div>

			<!-- Blockchain Explorers -->
			<div>
				<p class="mb-2 text-xs font-semibold text-green-500/80">Blockchain Explorers</p>
				<div class="flex flex-wrap gap-4">
					<Button
						href={`https://solscan.io/token/${contractAddress}`}
						target="_blank"
						rel="noopener noreferrer"
					>
						Solscan
					</Button>
					<Button
						href={`https://solana.fm/address/${contractAddress}`}
						target="_blank"
						rel="noopener noreferrer"
					>
						SolanaFM
